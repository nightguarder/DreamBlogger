{
  "name": "dreamblogger",
  "version": "1.0.0",
  "description": "A Full-stack Web App made as a part of a RobotDreams course.",
  "main": "main.js",
  "scripts": {
    "start": "npx tsc src/main.ts",
    "dev": "ts-node-dev src/main.ts",
    "build": "tsc --build && npm run tailwind",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "npx eslint . --ignore-path .eslintignore --ext .js,.ts",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "tailwind": "postcss public/css/tailwind.css -o public/css/style.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nightguarder/DreamBlogger.git"
  },
  "keywords": [
    "MongoDB",
    "Docker",
    "ExpressJS"
  ],
  "author": "CSteger",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/nightguarder/DreamBlogger/issues"
  },
  "homepage": "https://github.com/nightguarder/DreamBlogger#readme",
  "dependencies": {
    "@types/ejs": "^3.1.5",
    "@types/express-ejs-layouts": "^2.5.4",
    "autoprefixer": "^10.4.17",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.18.0",
    "joi": "^17.11.0",
    "mongodb": "^6.3.0",
    "mongoose": "^8.2.0",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^2.8.8",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
